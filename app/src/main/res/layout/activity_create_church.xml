<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CreateChurchActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/churchCard"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        card_view:cardCornerRadius="30dp"
        android:background="@drawable/shadow"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30sp"
            android:elevation="16dp"

            >
            <EditText
                android:id="@+id/churchName"
                android:textColorHint="@color/colorDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Church Name"
                />
            <EditText
                android:id="@+id/churchLocation"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorDivider"
                android:hint="Church Location"
                android:gravity="center"
                android:padding="20dp"
                />
            <EditText
                android:id="@+id/churchDescription"
                android:textColorHint="@color/colorDivider"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Description"
                android:padding="20dp"
                />

            <Button
                android:id="@+id/createChurchBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient"
                android:textColor="@color/white"
                android:text="Create Church"/>




        </LinearLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>