<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.BibleFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:id="@+id/bibleCard"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        card_view:cardCornerRadius="30dp"
        android:layout_gravity="center"
        android:background="@drawable/shadow"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30sp"
            android:elevation="16dp"

            >
            <EditText
                android:id="@+id/bibleBook"
                android:textColorHint="@color/colorDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:hint="Book"
                />
            <EditText
                android:id="@+id/bibleChapter"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorDivider"
                android:hint="Chapter"
                android:inputType="number"
                android:gravity="center"
                android:padding="20dp"
                />
            <EditText
                android:id="@+id/bibleVerseFrom"
                android:textColorHint="@color/colorDivider"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:hint="From verse..."
                android:padding="20dp"
                />
            <EditText
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorDivider"
                android:id="@+id/bibleVerseTo"
                android:layout_width="match_parent"
                android:inputType="number"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:hint="To verse..."
                android:padding="20dp"
                />
            <Button
                android:id="@+id/verseBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient"
                android:textColor="@color/white"
                android:text="Search the bible"/>




        </LinearLayout>



    </android.support.v7.widget.CardView>


</FrameLayout>