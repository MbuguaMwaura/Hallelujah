<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.NotesDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_marginTop="30sp"
        android:id="@+id/relay1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="30sp"
        android:layout_gravity="center"
        >

        <android.support.v7.widget.CardView
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/card1"
            android:layout_marginBottom="30sp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/notedetailsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Title"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="350sp"
            android:id="@+id/card1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            card_view:cardCornerRadius="10dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="185dp"
                android:layout_margin="20sp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/noteDetailsBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Then we will create some Drawables that could be
                    used in your app and lastly for the grand finale we will try to
                    replicate a gradient as can be seen in the Spotify app/website."
                    android:textSize="20dp"

                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>




    </RelativeLayout>




</FrameLayout>